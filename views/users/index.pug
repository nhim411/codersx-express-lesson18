extends ../layouts/common.pug

block content
  h1 Users Manager
  
  if errors
    each error in errors
      .alert.alert-danger= error
  hr
  ul
    each user in users
      li.mb-2
        span= user.name
        span &nbsp;
        a.btn.btn-outline-success.btn-sm(href='/users/update/'+user.id) update
        span &nbsp;
        a.btn.btn-outline-danger.btn-sm(href='/users/delete/'+user.id) delete
  hr
  h4 Add new user
  form(action="/users/create", method="POST")
    .form-group
      label Name
      input.form-control(type="text", name="name", value=values ? values.name : "")
      label Email
      input.form-control(type="text", name="email", value=values ? values.email : "")
      label Password
      input.form-control(type="text", name="password", value=values ? values.password : "")
    button(class="btn btn-primary") Create
      
  